<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
xmlns:gap = "http://phonegap.com/ns/1.0"
id = "org.readmobile.v16f.APPLICATION"
version = "1.0.0"
versionCode = "1">

    <name>v16f</name>

    <description>
        test for blue
    </description>

    <author href="http://www.readmobile.org" email="jen@readmobile.org">
        jenzo
</author>
       
<access origin="*" />

<gap:plugin name="ChildBrowser" value="com.phonegap.plugins.childBrowser.ChildBrowser"/> <!-- latest release -->
<feature name="http://plugins.phonegap.com/ChildBrowser/2.0.0" />

        
    <!-- ICONS -->
        
    <icon src="icon.png" /> <!-- default 72 pixels -->
        
    <icon src="icon.png" width="57" height="57" /> <!-- iPhone 3G, iPhone 3GS, iPod Touch 2G, 3G -->
    <icon src="icon.png" gap:platform="ios" width="72" height="72" /> <!-- iPad, iPad 2, iPad mini -->
    <icon src="icon.png" width="114" height="114" /> <!-- iPhone 4, iPhone 4S, iPod Touch 4G -->
    <icon src="icon.png" width="144" height="144" /> <!-- iPad 3, iPad 4 -->
        
    <icon src="icon.png" gap:platform="android" gap:density="ldpi" /> <!-- 36 pixels -->
    <icon src="icon.png" gap:platform="android" gap:density="mdpi" /> <!-- 48 pixels -->
    <icon src="icon.png" gap:platform="android" gap:density="hdpi" /> <!-- 72 pixels -->
    <icon src="icon.png" gap:platform="android" gap:density="xhdpi" /> <!-- 96 pixels -->
        
    <icon src="icon.png" gap:platform="blackberry" /> <!-- 72 pixels -->
    <icon src="icon.png" gap:platform="blackberry" gap:state="hover"/> <!-- 72 pixels -->
        
    <icon src="icon.png" gap:platform="winphone" /> <!-- 57 pixels -->
    <icon src="icon.png" gap:platform="winphone" gap:role="background" /> <!-- 72 pixels -->
        
    <icon src="icon.png" gap:platform="webos" /> <!-- 29 pixels -->
    <icon src="icon.png" gap:platform="webos" gap:role="mini" /> <!-- 15 pixels -->
        
    <!-- SPLASH SCREENS -->
    
    <preference name="splash-screen-duration" value="20000" />
        
    <gap:splash src="splash.png" /> <!-- default 320x480 pixels -->
        
    <gap:splash src="splash.png" gap:platform="ios" width="1024" height="768" /> <!-- iPad 1, iPad 2, iPad mini -->
    <gap:splash src="splashI2.png" gap:platform="ios" width="768" height="1024" /> <!-- iPad 1, iPad 2, iPad mini -->
    <gap:splash src="splashI3.png" gap:platform="ios" width="320" height="480" /> <!-- iPhone 3G, iPhone 3GS, iPod Touch 2, iPod Touch 3 -->
    <gap:splash src="splashI4.png" gap:platform="ios" width="640" height="960" /> <!-- iPhone 4, iPhone 4S, iPod Touch 4 -->
    <gap:splash src="splashI5.png" gap:platform="ios" width="640" height="1136" /> <!-- iPhone 5, iPod Touch 5 -->
        
    <gap:splash src="splashAn1.png" gap:platform="android" gap:density="ldpi" /> <!-- 200x320 -->
    <gap:splash src="splashAn2.png" gap:platform="android" gap:density="mdpi" /> <!-- 320x480 -->
    <gap:splash src="splashAn3.png" gap:platform="android" gap:density="hdpi" /> <!-- 480x800 -->
    <gap:splash src="splashAn4.png" gap:platform="android" gap:density="xhdpi" /> <!-- 720x1280 -->
        
    <gap:splash src="splash.png" gap:platform="blackberry" /> <!-- BlackBerry 250x250 -->
        
    <gap:splash src="splash.jpg" gap:platform="winphone" /> <!-- Windows Phone 7 480x800 -->
        
    <gap:splash src="splash.png" gap:platform="webos" /> <!-- WebOS 64x64 -->
        
    <!-- GENERAL PREFERENCES -->
        
    <!-- <preference name="phonegap-version" value="2.2.0" /> version of phonegap -->
    <preference name="orientation" value="default" /> <!-- support -->
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" /> <!-- no bar at top of Android and iOS -->
        
    <!-- iOS PREFERENCES -->
        
    <preference name="webviewbounce" value="false" /> <!-- bounce effect -->
    <preference name="prerendered-icon" value="true" /> <!-- no gloss effect -->
    <preference name="stay-in-webview" value="false" /> <!-- if set to true, all links (even with target set to blank) will open in the app's webview -->
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="exit-on-suspend" value="true" /> <!-- if set to false, app will continue to run on suspend -->
    <preference name="show-splash-screen-spinner" value="true" /> <!-- if set to false, the spinner won't appear on the splash screen during app loading -->
    <preference name="auto-hide-splash-screen" value="true" /> <!-- if set to false, the splash screen must be hidden using a JavaScript API -->
        
    <!-- ANDROID PREFERENCES -->
        
    <preference name="android-minSdkVersion" value="7" /> <!-- minimun Android 2.1 -->
    <!-- <preference name="android-maxSdkVersion" value="17" /> maximun Android 4.2 -->
    <preference name="android-installLocation" value="auto" />
        
    <!-- BLACKBERRY PREFERENCES -->
        
    <preference name="disable-cursor" value="false" />
        
    <!-- PHONEGAP API FEATURES PREFERENCES -->
        
    <preference name="permissions" value="none"/>

</widget>